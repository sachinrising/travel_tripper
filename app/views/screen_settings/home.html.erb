<!-- Modal 1 -->
<div id="myModal1" class="modal fade " role="dialog">
	<div class="modal-dialog">

		<!-- Modal content-->
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">
					&times;
				</button>
				<h4 class="modal-title">Change Document UI Settings</h4>
			</div>
			<div class="modal-body">
				<!-- <p>
				Enter the title you want to change.
				<input type="text" style="width: 96%;" value="" id="id-input-title">
				</p> -->

				<form class="form-horizontal" id="update_setting">
					<fieldset>
						<div class="control-group">
							<label for="id-role" class="control-label">Title</label>
							<div class="controls">
								<input type="text" placeholder="Enter Page Title Here" id="screen_setting_title" name="title" class="form-control">
							</div>
						</div>
						<input disabled="disabled" type="hidden" style="display:none" name="name"  id="screen_setting_name" >
						<input disabled="disabled" type="hidden" style="display:none" name="id"  id="screen_setting_id" >

						<div class="control-group">
							<label for="id-role" class="control-label">Font Family</label>
							<div class="controls">
								<select id="screen_setting_font" class="form-control"  name="font">
									<option style="font-family: 'Comic Sans MS'">Comic Sans MS</option>
									<option style="font-family: Arial">Arial</option>
									<option style="font-family: 'Times New Roman'">Times New Roman</option>
									<option style="font-family: 'verdana, arial, helvetica, sans-serif'">verdana, arial, helvetica, sans-serif</option>
									<option style="font-family: 'tangerine'">Tangerine</option>
									<option style="font-family: 'tahoma'">Tahoma</option>
								</select>
							</div>
						</div>

						<div class="control-group " >
							<label for="id-email" class="control-label">Background Color</label>
							<div class="controls">
								<input type="text" class="form-control jscolor" value="transparent"  placeholder="Enter text color here" id="screen_setting_color" name="color">
							</div>
						</div>

						<!-- <div class="control-group " >
						<label for="id-email" class="control-label">Background Color</label>
